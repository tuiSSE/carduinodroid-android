<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="10dip"/>
            <solid android:color="@color/colorBlackOverlay"/>
            <stroke
                android:width="0dp"
                android:color="#00000000" />
        </shape>
    </item>
    <item android:id="@android:id/progress">
        <clip
            android:clipOrientation="vertical"
            android:gravity="top">
            <shape>
                <corners android:radius="10dip"/>
                <gradient
                    android:endColor="@color/colorDistanceOk"
                    android:centerColor="@color/colorDistanceWarning"
                    android:startColor="@color/colorDistanceCritical"
                    android:angle="90" />
            </shape>
        </clip>
    </item>
</layer-list>