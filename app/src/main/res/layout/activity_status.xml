<?xml version="1.0" encoding="utf-8"?>
<!-- Main Layout of Main Activity -->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="tuisse.carduinodroid_android.statusActivity">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">
        <ImageView
            android:layout_width="@dimen/imageSize"
            android:layout_height="@dimen/imageSize"
            android:paddingEnd="@dimen/imageMargin"
            android:paddingRight="@dimen/imageMargin"
            android:src="@drawable/logo"
            android:id="@+id/imageViewLogo"/>

        <ImageView
            android:layout_width="@dimen/imageSize"
            android:layout_height="@dimen/imageSize"
            android:paddingEnd="@dimen/imageMargin"
            android:paddingRight="@dimen/imageMargin"
            android:src="@drawable/serial_idle"
            android:id="@+id/imageViewSerialConnectionStatus" />
    </LinearLayout>


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/exitApp"
        android:id="@+id/buttonClose"
        android:layout_gravity="center_horizontal" />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/actionSettings"
        android:id="@+id/buttonSettings"
        android:layout_gravity="center_horizontal" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/drive"
        android:id="@+id/buttonDrive"
        android:layout_gravity="center_horizontal" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/startSerialService"
        android:id="@+id/buttonSerialStart"
        android:layout_gravity="center_horizontal" />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/stopSerialService"
        android:id="@+id/buttonSerialStop"
        android:layout_gravity="center_horizontal" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/serialConnectionStatus"
        android:id="@+id/textViewSerialConnectionStatus"
        android:layout_gravity="center_horizontal" />




</LinearLayout>
