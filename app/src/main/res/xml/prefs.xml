<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".SettingsActivity">

    <PreferenceCategory
        android:title="Remote Control" >
        <ListPreference
            android:key="controlMode"
            android:defaultValue="0"
            android:entries="@array/controlMode"
            android:entryValues="@array/controlMode_values"
            android:summary="@string/controlModeTransceiver"
            android:title="@string/controlModeTitle" />
    </PreferenceCategory>
    <PreferenceCategory
        android:title="Serial Connection" >
        <ListPreference
            android:key="serialType"
            android:dependency="controlMode"
            android:defaultValue="1"
            android:entries="@array/serial"
            android:entryValues="@array/serial_values"
            android:summary="@string/serialSelect"
            android:title="@string/serialBluetooth" />
        <CheckBoxPreference
            android:key="rcNetwork1Activity0"
            android:dependency="controlMode"
            android:defaultValue="true"
            android:summaryOn="Network"
            android:summaryOff="Application"
            android:title="Remote Control" />
    </PreferenceCategory>
    <PreferenceCategory
        android:title="Ip Connection" >
        <EditTextPreference
            android:key="targetIP"
            android:defaultValue="@string/defaultIp"
            android:summary="@string/defaultIp"
            android:title="Remote IP" />
    </PreferenceCategory>

</PreferenceScreen>